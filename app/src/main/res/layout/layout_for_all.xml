<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_attractions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.elena.tourguideapp1.AttractionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_navbar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                style="@style/navBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/home_image_2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/attractions_navbar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                style="@style/navBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/attractionsColor"
                android:src="@drawable/attractions_image2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/food_navbar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                style="@style/navBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/foodColor"
                android:src="@drawable/food_image_7" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shops_navbar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                style="@style/navBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/shopsColor"
                android:src="@drawable/shops_image3" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/events_navbar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView

                style="@style/navBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/eventsColor"
                android:src="@drawable/events_image2" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </LinearLayout>

</LinearLayout>
